<h1>Order Summary</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= @cart_counts[product.id] %></td>
        <td><%= number_to_currency(product.price * @cart_counts[product.id]) %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3">Subtotal:</td>
      <td><%= number_to_currency(@subtotal) %></td>
    </tr>
    <tr>
      <td colspan="3">Tax (<%= number_to_percentage(@tax_rate * 100) %>):</td>
      <td><%= number_to_currency(@tax_amount) %></td>
    </tr>
    <tr>
      <td colspan="3"><strong>Total:</strong></td>
      <td><strong><%= number_to_currency(@total) %></strong></td>
    </tr>
  </tbody>
</table>

<%= form_with(model: @order, url: confirm_order_path(@order), method: :post) do |form| %>

  <!-- Form fields -->
  <%= form.submit "Confirm Order" %>
<% end %>